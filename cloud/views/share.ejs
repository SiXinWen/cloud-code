	<div id="header" class="row" >
		<div id="symbol" class="col-md-7">
			<p class="lead">撕新闻标</p>
		</div>
		<div id="navigation" class="col-md-5">
			<div class="lead">
				<a href="#a" style="display:block;float:left;margin:0px 10px 0px 10px;">home</a>
				<a href="#a" style="display:block;float:left;margin:0px 10px 0px 10px;">news</a>
				<a href="#a" style="display:block;float:left;margin:0px 10px 0px 10px;">me</a>
				<a href="#a" style="display:block;float:left;margin:0px 10px 0px 10px;">exit</a>
				<form class="form-search" >
					<input type="text" class="form-control" style="float:left;width:70px;margin:0px 10px 0px 80px;">
					<button type="submit" class="btn btn-default" style="float:left;width:70px;margin:0px;">Search</button>
				</form>

			</div>

		</div>
		<br/>

	</div>
	<div class="row" style="margin:0px;padding:0px">
		<div id="news" class="col-md-4" style="margin:0px;padding:0px">
			<div class="hero-unit">
				<h1 id="newsHead"><%= newsHead %></h1>
				<img id="newsPic" src="<%= newsPic_src %>" alt="..." class="img-rounded" style="width:80%;height:auto;">
				<p id="newsContent"><%= newsContent %></p>
				<p>
					<a class="btn btn-primary btn-large" href="#myModal" data-toggle="modal">参看全部 »</a>
				</p>
				<div class="modal fade" id="myModal" tabindex="-1" role="dialog"  aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								<h4 class="modal-title" id="myModalLabel">News</h4>
							</div>
							<div class="modal-body">
								<p><%= newsContent %></p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
							</div>
						</div>
						<!-- /.modal-content -->
					</div>
					<!-- /.modal -->
				</div>
			</div>
		</div>
		<div id="comment" class="col-md-8">
			<div style="float:left">
				<span class="glyphicon glyphicon-thumbs-up"></span>
			</div>
			<div style="float:right">
				<span class="glyphicon glyphicon-thumbs-down"></span>
			</div>
			<div class="progress">
				<div class="progress-bar progress-bar-primary progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
					<span>35%</span>
				</div>
				<div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 65%">
					<span >65%</span>
				</div>

			</div>
			<div id="discuss" style="overflow: auto;height:320px;border:2px solid;border-radius:10px;">
				<a href="#">Ontime</a>
				|
				<a href="#">Hot</a>
				|
				<a href="#">People you are following</a>
				<br/>
				
				<br/>
			</div>
		</div>
		<div class="col-md-8">
			<div style="border:2px solid;border-radius:10px;">
				<h3>What's your opinion?</h3>
				<form role="form" >
					<textarea id="new-msg" class="form-control" style="width:95%;margin:15px 15px 0px 15px;resize:none" placeholder="Enter your opinion here..." rows="2" ></textarea>
					<br/>
					<div style="margin: 0px 10px 0px 20px">
						<input id="Support" type="radio" name="side" value="yes">
						正方
						<input type="radio" name="side" value="no">
						反方
						<input type="checkbox" name="anonymous">
						匿名
						<a id="send-btn" type="submit" class="btn btn-default pull-right" >提交</a>
					</div>
				</form>
				<br/>
			</div>
		</div>
	</div>

